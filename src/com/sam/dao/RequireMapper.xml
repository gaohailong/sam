<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sam.dao.RequireDao">
	<insert id="addRequire" parameterType="com.sam.entity.AssetRequire">
		insert into AssetRequire(arid,artime,arday,arperson,arphone,arstatus)
		 values(#{arid},to_date(#{artime},'yyyy-mm-dd'),#{arday},#{arperson},#{arphone},'已受理')
	</insert>
	
	<select id="findAssetRequires" parameterType="com.sam.entity.AssetRequire"
		resultType="com.sam.entity.AssetRequire">
		select * from AssetRequire where 
			<if test="ainame != null">
				and ainame=#{ainame}
			</if>
			<if test="ainame != null">
				and ainame=#{ainame}
			</if>
			<if test="ainame != null">
				and ainame=#{ainame}
			</if>
			<if test="ainame != null">
				and ainame=#{ainame}
			</if>
			<if test="ainame != null">
				and ainame=#{ainame}
			</if>
			<if test="ainame != null">
				and ainame=#{ainame}
			</if>
			<if test=""></if>
	</select>
</mapper>
