<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sam.dao.DepartmentDao">
	<!-- 根据部门等级查询部门list -->
	<select id="findAssetDepartmentsByAdlevel" parameterType="int">
		select * from assetdepartment where adlevel=#{adlevel}
	</select>
	
	<!-- 根据类型id查询资产 -->
	<select id="findAssetInfosByDepartmentId" parameterType="int">
		select * from AssetInfo where aiid=#{departmentId}
	</select>
	
</mapper>
