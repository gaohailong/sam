<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sam.dao.InfoDao">
	<insert id="addInfo" parameterType="com.sam.entity.AssetInfo">
		insert into
		assetinfo(aiid,aimodel,ainame,atname,ahname,aaid,aidate,aiMeasuer,aiSupply,aiMoney,aiLife,aiRemark,aidepreciation,airemainratio)
		values(assetinfo_seq.nextval,#{aimodel},#{ainame},#{atname},#{ahname},#{aaid},sysdate,to_date(#{aimeasuer},'yyyy-mm-dd'),#{aisupply},#{aimoney},to_date(#{ailife},'yyyy-mm-dd'),#{airemark},#{aidepreciation},#{airemainratio})
	</insert>
	<select id="findInfoByAiname" parameterType="java.lang.String"
		resultType="com.sam.entity.AssetInfo">
		select * from assetinfo where ainame=#{ainame}
	</select>
	<select id="findInfoByAiid" parameterType="java.lang.Integer"
		resultType="com.sam.entity.AssetInfo">
		select * from assetinfo where aiid=#{aiid}
	</select>
	<select id="findInfoByAsname" parameterType="java.lang.String"
		resultType="com.sam.entity.AssetInfo">
		select * from assetinfo where asname = #{asname}
	</select>
	<select id="findInfoByAcid" parameterType="int"
		resultType="com.sam.entity.AssetInfo">
		select * from assetinfo where acid = #{acid}
	</select>
	<select id="findInfoByArid" parameterType="int"
		resultType="com.sam.entity.AssetInfo">
		select * from assetinfo where arid = #{arid}
	</select>
	<update id="updInfoAsname" parameterType="java.util.Map">
		update assetinfo set
		asname=#{asname} where aiid=#{aiid}
	</update>
	<update id="updInfoAcid" parameterType="java.util.Map">
		update assetinfo set
		acid=#{acid},asname=#{asname} where aiid=#{aiid}
	</update>

	<select id="findInfoByCondition" parameterType="com.sam.entity.AssetInfo"
		resultType="com.sam.entity.AssetInfo">
		select * from assetinfo where
		<if test="ainame != null">
			ainame=#{ainame},
		</if>
		<if test="atname != null">
			AND atname=#{atname},
		</if>
		<if test="ahname != null">
			AND ahname=#{ahname},
		</if>
		<if test="aidate != null">
			AND aidate=#{aidate},
		</if>
	</select>
</mapper>
